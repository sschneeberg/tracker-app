<main class="userhome">
    <h2>
        <%=month.name%>
    </h2>
    <% periods.forEach(period => { %>
        <p>period start:
            <%= period.startDate %>
        </p>
        <p>period end:
            <%= period.endDate %>
        </p>
        <% }) %>
            <% periodWeeks.forEach(week => { %>
                <p>week:
                    <%= week %>
                </p>
                <% }) %>
                    <% notes.forEach(notes => { %>
                        <% notes.forEach(note => { %>
                            <p>note:
                                <%= note.date %>
                                    <%= note.title %>
                                        <%= note.content %>
                            </p>
                            <% }) %>
                                <% }) %>
                                    <% symptoms.forEach(symptoms => { %>
                                        <%symptoms.forEach(symptom => { %>
                                            <p>
                                                symptom:
                                                <%= symptom.date %>,
                                                    <%= symptom.type %>,
                                                        <%= symptom.severity %>
                                            </p>
                                            <% }) %>
                                                <% }) %>
                                                    <div class="arrows">
                                                        <a href="/user/<%= month.previousMonth %>"><i class="fas fa-chevron-left"></i></a><span><a href="/user/<%= month.nextMonth %>"><i class="fas fa-chevron-right"></i></a></span>
                                                    </div>
                                                    <div class="calendar">
                                                        <% monthData.forEach(day => { %>
                                                            <form id='day<%= day.day %>' action="/user/<%= month.num %>/<%=day.day %>" method="POST">
                                                                <input type="hidden" name="notes" value="<%=day.notes%>">
                                                                <input type="hidden" name="symptoms" value="<%=day.symptoms%>">
                                                                <input type="hidden" name="period" value="<%=day.period%>">
                                                                <%#  <a href="javascript:{}" onclick="document.getElementById('day ').submit();return false;">%>
                                                                    <div class="day">
                                                                        <input id="selectDay" type="submit" value='<%= day.day%>'>
                                                                        <% if (day.notes.length > 0){ %>
                                                                            <i class="far fa-sticky-note fa-lg"></i>
                                                                            <% } %>
                                                                                <% if  (day.symptoms.length > 0){ %>
                                                                                    <i class="fas fa-angle-double-up fa-lg"></i>
                                                                                    <% } %>
                                                                                        <% if (day.period) { %>
                                                                                            <i class="far fa-moon fa-lg"></i>
                                                                                            <% } %>
                                                                    </div>
                                                                    </input>
                                                            </form>
                                                            <% }) %>
                                                    </div>
</main>