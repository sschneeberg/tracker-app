<main class='showDay'>
    <div id="dayNav">
        <div class="arrows">
            <a href="/user/<%= month.num %>/<%= day.previousDay %>"><i class="fas fa-chevron-left"></i></a><span><a href="/user/<%= month.num %>/<%= day.nextDay %>"><i class="fas fa-chevron-right"></i></a></span>
        </div>
        <h2 id='showDay'>
            <%= month.name %>
                <%= day.num %>
        </h2>
    </div>
    <section>

        <h4 id='notes'>Symptoms: <span><a id="newNote" href="/user/<%= month.num%>/<%=day.num%>/new"><i class="fas fa-plus fa-xs"></i></a></span></h4>
        <% if (symptoms) { %>
            <div class="row">
                <% symptoms.forEach(symptom => { %>
                    <div class="col s12 ">
                        <div class="card symptom">
                            <h5>
                                <%= symptom.type %>
                            </h5>
                            <div class="symptom-severity">
                                <% for( let i = 1; i <= symptom.severity; i++ ) { %>
                                    <i class="fas fa-square" id="filled"></i>
                                    <% } %>
                                        <% if (symptom.severity < 5) { %>
                                            <% for( let i = symptom.severity; i <= 5; i++ ) { %>
                                                <i class="fas fa-square" id="empty"></i>
                                                <% } %>
                                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } %>
                <hr>

    </section>
    <section>
        <h4 id='notes'>Notes: <span><a class="new" href="/user/<%= month.num%>/<%=day.num%>/new"><i class="fas fa-plus fa-xs"></i></a></span></h4>
        <hr>
        <% if (notes.length > 0) { %>
            <div class="row">
                <% notes.forEach(note => { %>
                    <div class="col s12 m6 l4">
                        <div class="card">
                            <div class="card-content">
                                <p class="card-title">
                                    <%= note.title %><span><a class="new" href="/user/<%= month.num%>/<%=day.num%>/edit"><i class="fas fa-pen fa-xs"></i></a></span></p>
                                <p>
                                    <%= note.content %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } %>
    </section>
    <section>
        <h4 class='notes'>Sexual Activity: <span><a class="new" href="/user/<%= month.num%>/<%=day.num%>/new"><i class="fas fa-plus fa-xs"></i></a></span></h4>
        <hr>
        <% if (activity) { %>
            <div class="row">
                <ul>
                    <% activity.forEach(activity => { %>
                        <div class="col s12">
                            <div class="card" id='activity'>
                                <div class="card-content">
                                    <p><i class="far fa-star fa-sm"></i>Protection used:
                                        <%= activity.protection %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </ul>
            </div>
            <% } %>


    </section>
    <div class="arrows">
        <a href="/user/<%= month.num %>"><i class="fas fa-chevron-left"></i>Back to <%= month.name %></a>
    </div>
</main>