<main class='showDay'>
    <div id="dayNav">
        <div class="arrows">
            <a href="/user/<%= month.num %>/<%= day.previousDay %>"><i class="fas fa-chevron-left"></i></a><span><a href="/user/<%= month.num %>/<%= day.nextDay %>"><i class="fas fa-chevron-right"></i></a></span>
        </div>
        <h2 id='showDay'>
            <%= month.name %>
                <%= day.num %>
        </h2>
    </div>
    <h4 id='notes'>Notes: <span><a id="newNote" href="/user/<%= month.num%>/<%=day.num%>/new"><i class="fas fa-plus fa-xs"></i></a></span></h4>
    <hr>
    <% if (notes.length > 0) { %>
        <div class="row">
            <% notes.forEach(note => { %>
                <div class="col s12 m6 l4">
                    <div class="card">
                        <div class="card-content">
                            <p class="card-title">
                                <%= note.title %><span><a id="newNote" href="/user/<%= month.num%>/<%=day.num%>/edit"><i class="fas fa-pen fa-xs"></i></a></span></p>
                            <p>
                                <%= note.content %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
        <% } %>
            <div class="arrows">
                <a href="/user/<%= month.num %>"><i class="fas fa-chevron-left"></i>Back to <%= month.name %></a>
            </div>
</main>